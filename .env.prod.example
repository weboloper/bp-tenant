# =============================================================================
# PRODUCTION ENVIRONMENT
# =============================================================================

# -----------------------------------------------------------------------------
# DJANGO CORE
# -----------------------------------------------------------------------------
DEBUG=False
SECRET_KEY=your-super-strong-production-secret-key-min-50-chars
DJANGO_ENV=production
DOMAIN=yourdomain.com
ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com
FRONTEND_URL=https://yourdomain.com

# -----------------------------------------------------------------------------
# DATABASE
# -----------------------------------------------------------------------------
# Managed PostgreSQL (Recommended)
DATABASE_URL=postgresql://user:password@managed-db-host:5432/production_db

# Container PostgreSQL (Alternative)
# POSTGRES_DB=bp_prod_db
# POSTGRES_USER=bp_prod_user
# POSTGRES_PASSWORD=super-secure-password
# DATABASE_URL=postgresql://bp_prod_user:super-secure-password@postgres:5432/bp_prod_db

# -----------------------------------------------------------------------------
# REDIS, CACHE & CELERY
# -----------------------------------------------------------------------------
REDIS_URL=redis://redis:6379/0
FALLBACK_CACHE_BACKEND=database
CELERY_ENABLED=True

# -----------------------------------------------------------------------------
# STATIC & MEDIA FILES
# -----------------------------------------------------------------------------
STATIC_FILES_HANDLER=caddy

# S3 Configuration (for CDN)
# STATIC_FILES_HANDLER=s3
# AWS_ACCESS_KEY_ID=your-aws-key
# AWS_SECRET_ACCESS_KEY=your-aws-secret
# AWS_STORAGE_BUCKET_NAME=production-static-bucket
# AWS_S3_REGION_NAME=eu-central-1
# AWS_S3_CUSTOM_DOMAIN=cdn.yourdomain.com

# -----------------------------------------------------------------------------
# EMAIL & NOTIFICATION PROVIDERS
# -----------------------------------------------------------------------------
EMAIL_PROVIDER=sendgrid
SMS_PROVIDER=netgsm

# SMTP (fallback)
EMAIL_HOST=smtp.sendgrid.net
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=apikey
EMAIL_HOST_PASSWORD=SG.your_production_sendgrid_api_key
DEFAULT_FROM_EMAIL=noreply@yourdomain.com

# SendGrid API
SENDGRID_API_KEY=SG.your_production_api_key

# NetGSM
NETGSM_USERNAME=your-netgsm-username
NETGSM_PASSWORD=your-netgsm-password
NETGSM_HEADER=YOURBRAND

# Twilio (alternative)
# SMS_PROVIDER=twilio
# TWILIO_ACCOUNT_SID=your-account-sid
# TWILIO_AUTH_TOKEN=your-auth-token
# TWILIO_FROM_NUMBER=+1234567890

# Push Notifications
FCM_SERVER_KEY=your-fcm-server-key

# -----------------------------------------------------------------------------
# OAUTH PROVIDERS
# -----------------------------------------------------------------------------
GOOGLE_OAUTH2_CLIENT_ID=production-google-client-id
GOOGLE_OAUTH2_CLIENT_SECRET=production-google-client-secret

FACEBOOK_APP_ID=production-facebook-app-id
FACEBOOK_APP_SECRET=production-facebook-app-secret

APPLE_CLIENT_ID=production-apple-client-id
APPLE_SECRET=production-apple-private-key
APPLE_KEY_ID=production-apple-key-id
APPLE_TEAM_ID=production-apple-team-id

# -----------------------------------------------------------------------------
# PAYMENT GATEWAY
# -----------------------------------------------------------------------------
IYZICO_API_KEY=your-production-iyzico-api-key
IYZICO_SECRET_KEY=your-production-iyzico-secret-key
IYZICO_TEST_MODE=False

# -----------------------------------------------------------------------------
# MULTI-TENANT
# -----------------------------------------------------------------------------
SUPERUSER_BYPASS_TENANT=True

# -----------------------------------------------------------------------------
# MONITORING
# -----------------------------------------------------------------------------
SENTRY_DSN=https://production-sentry-dsn@sentry.io/project-id
APP_VERSION=1.0.0

# -----------------------------------------------------------------------------
# DOCKER SERVICES
# -----------------------------------------------------------------------------
# Flower (Celery monitoring)
FLOWER_PASSWORD=secure-flower-password

# -----------------------------------------------------------------------------
# SSL
# -----------------------------------------------------------------------------
SSL_EMAIL=admin@yourdomain.com

# -----------------------------------------------------------------------------
# BACKUP
# -----------------------------------------------------------------------------
POSTGRES_CONTAINER=bp_postgres
BACKUP_DIR=/opt/backups/postgres
BACKUP_RETENTION_DAYS=30
MEDIA_BACKUP_DIR=/opt/backups/media
MEDIA_DIR=./backend/media
BACKUP_NOTIFY_EMAIL=admin@yourdomain.com

# Offsite Backup (S3)
OFFSITE_BACKUP_ENABLED=True
AWS_S3_BACKUP_BUCKET=production-backups-bucket
