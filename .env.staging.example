# =============================================================================
# STAGING ENVIRONMENT
# =============================================================================

# -----------------------------------------------------------------------------
# DJANGO CORE
# -----------------------------------------------------------------------------
DEBUG=True
SECRET_KEY=staging-secret-key-change-this
DJANGO_ENV=staging
DOMAIN=staging.yourdomain.com
ALLOWED_HOSTS=staging.yourdomain.com,localhost,127.0.0.1
FRONTEND_URL=https://staging.yourdomain.com

# -----------------------------------------------------------------------------
# DATABASE
# -----------------------------------------------------------------------------
# Container PostgreSQL
POSTGRES_DB=bp_staging_db
POSTGRES_USER=bp_staging_user
POSTGRES_PASSWORD=bp_staging_secure_password
DATABASE_URL=postgresql://bp_staging_user:bp_staging_secure_password@postgres:5432/bp_staging_db

# External Managed Database (Alternative)
# DATABASE_URL=postgresql://user:pass@staging-db-host:5432/staging_db

# -----------------------------------------------------------------------------
# REDIS, CACHE & CELERY
# -----------------------------------------------------------------------------
REDIS_URL=redis://redis:6379/0
FALLBACK_CACHE_BACKEND=database
CELERY_ENABLED=True

# -----------------------------------------------------------------------------
# STATIC & MEDIA FILES
# -----------------------------------------------------------------------------
STATIC_FILES_HANDLER=caddy

# S3 Configuration (optional)
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=
# AWS_STORAGE_BUCKET_NAME=staging-static-bucket
# AWS_S3_REGION_NAME=eu-central-1

# -----------------------------------------------------------------------------
# EMAIL & NOTIFICATION PROVIDERS
# -----------------------------------------------------------------------------
EMAIL_PROVIDER=smtp
SMS_PROVIDER=mock

# SMTP (SendGrid)
EMAIL_HOST=smtp.sendgrid.net
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=apikey
EMAIL_HOST_PASSWORD=SG.your_staging_sendgrid_api_key
DEFAULT_FROM_EMAIL=staging@yourdomain.com

# SendGrid API (alternative)
# EMAIL_PROVIDER=sendgrid
# SENDGRID_API_KEY=SG.your_staging_api_key

# NetGSM (when ready for testing)
NETGSM_USERNAME=
NETGSM_PASSWORD=
NETGSM_HEADER=

# Twilio (when ready for testing)
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_FROM_NUMBER=

# Push Notifications
FCM_SERVER_KEY=

# -----------------------------------------------------------------------------
# OAUTH PROVIDERS
# -----------------------------------------------------------------------------
GOOGLE_OAUTH2_CLIENT_ID=staging-google-client-id
GOOGLE_OAUTH2_CLIENT_SECRET=staging-google-client-secret

FACEBOOK_APP_ID=staging-facebook-app-id
FACEBOOK_APP_SECRET=staging-facebook-app-secret

APPLE_CLIENT_ID=staging-apple-client-id
APPLE_SECRET=staging-apple-private-key
APPLE_KEY_ID=staging-apple-key-id
APPLE_TEAM_ID=staging-apple-team-id

# -----------------------------------------------------------------------------
# PAYMENT GATEWAY
# -----------------------------------------------------------------------------
IYZICO_API_KEY=sandbox-api-key
IYZICO_SECRET_KEY=sandbox-secret-key
IYZICO_TEST_MODE=True

# -----------------------------------------------------------------------------
# MULTI-TENANT
# -----------------------------------------------------------------------------
SUPERUSER_BYPASS_TENANT=True

# -----------------------------------------------------------------------------
# MONITORING
# -----------------------------------------------------------------------------
SENTRY_DSN=https://staging-sentry-dsn@sentry.io/project-id
APP_VERSION=1.0.0

# -----------------------------------------------------------------------------
# DOCKER SERVICES
# -----------------------------------------------------------------------------
PGADMIN_DEFAULT_EMAIL=admin@yourdomain.com
PGADMIN_DEFAULT_PASSWORD=staging-secure-password

# -----------------------------------------------------------------------------
# SSL
# -----------------------------------------------------------------------------
SSL_EMAIL=admin@yourdomain.com

# -----------------------------------------------------------------------------
# BACKUP
# -----------------------------------------------------------------------------
POSTGRES_CONTAINER=bp_postgres
BACKUP_DIR=/opt/backups/postgres
BACKUP_RETENTION_DAYS=7
MEDIA_BACKUP_DIR=/opt/backups/media
MEDIA_DIR=./backend/media
BACKUP_NOTIFY_EMAIL=admin@yourdomain.com

OFFSITE_BACKUP_ENABLED=False
AWS_S3_BACKUP_BUCKET=staging-backups-bucket
