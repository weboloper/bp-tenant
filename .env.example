# Development Environment Variables

# Django Settings
DEBUG=True
SECRET_KEY=dev-secret-key-change-this-in-production
DJANGO_SETTINGS_MODULE=config.settings
FRONTEND_URL=http://localhost

# Database (PostgreSQL Container)
# DATABASE_URL=sqlite:///db.sqlite3
POSTGRES_DB=bp_db
POSTGRES_USER=bp_user
POSTGRES_PASSWORD=bp_pass
DATABASE_URL=postgresql://bp_user:bp_pass@postgres:5432/bp_db

# Cache & Queue
REDIS_URL=redis://redis:6379/0

# Cache Fallback (when Redis not available: dummy|database|locmem)
FALLBACK_CACHE_BACKEND=dummy

# Static Files Handler (caddy|whitenoise|s3)
STATIC_FILES_HANDLER=caddy

# SSL & Domain
DOMAIN=localhost
SSL_EMAIL=admin@example.com

# Monitoring & Error Tracking
SENTRY_DSN=  # https://your-sentry-dsn@sentry.io/project-id
APP_VERSION=1.0.0

# pgAdmin Configuration
PGADMIN_DEFAULT_EMAIL=admin@domain.com
PGADMIN_DEFAULT_PASSWORD=admin123

# Email Settings
USE_ASYNC_EMAIL=False

# Email Configuration (Universal SMTP - works with any provider)
# Leave empty for console backend in development
EMAIL_HOST=
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=
EMAIL_HOST_PASSWORD=
DEFAULT_FROM_EMAIL=noreply@yourdomain.com

# ============================================================================
# AWS CONFIGURATION
# ============================================================================
# Used for both Static Files (S3) and Backup (S3)
# AWS credentials are shared between services

# AWS Credentials (via aws configure or environment variables)
# AWS_ACCESS_KEY_ID=your-aws-access-key-id
# AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key

# Static Files S3 Configuration (when STATIC_FILES_HANDLER=s3)
# AWS_STORAGE_BUCKET_NAME=your-static-files-bucket
# AWS_S3_CUSTOM_DOMAIN=cdn.yourdomain.com
# AWS_DEFAULT_ACL=public-read
# AWS_S3_OBJECT_PARAMETERS_CacheControl=max-age=86400

# AWS Region (used by both static files and backups)
AWS_REGION=eu-central-1

# Backup S3 Configuration (optional)
OFFSITE_BACKUP_ENABLED=false
AWS_S3_BACKUP_BUCKET=your-backups-bucket  # Different bucket for backups

# ============================================================================
# SENTRY ERROR TRACKING
# ============================================================================

SENTRY_DSN=  # https://your-sentry-dsn@sentry.io/project-id
APP_VERSION=1.0.0

# ============================================================================
# SOCIAL AUTHENTICATION (OAuth Providers)
# ============================================================================

# Google OAuth
GOOGLE_OAUTH2_CLIENT_ID=your-google-client-id
GOOGLE_OAUTH2_CLIENT_SECRET=your-google-client-secret

# Facebook OAuth
FACEBOOK_APP_ID=your-facebook-app-id
FACEBOOK_APP_SECRET=your-facebook-app-secret

# Apple OAuth
APPLE_CLIENT_ID=your-apple-client-id
APPLE_SECRET=your-apple-private-key
APPLE_KEY_ID=your-apple-key-id
APPLE_TEAM_ID=your-apple-team-id

# ============================================================================
# BACKUP CONFIGURATION
# ============================================================================

# PostgreSQL Backup
POSTGRES_CONTAINER=bp_postgres
# Development: /d/opt/backups/postgres (Windows Git Bash)
# Production: /opt/backups/postgres (Linux VPS)
BACKUP_DIR=/opt/backups/postgres
BACKUP_RETENTION_DAYS=7

# Media Backup
MEDIA_BACKUP_DIR=/opt/backups/media
MEDIA_DIR=./backend/media

# Backup Notifications (Optional)
BACKUP_NOTIFY_EMAIL=your-email@example.com
