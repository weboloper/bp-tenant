# =============================================================================
# DEVELOPMENT ENVIRONMENT
# =============================================================================

# -----------------------------------------------------------------------------
# DJANGO CORE
# -----------------------------------------------------------------------------
DEBUG=True
SECRET_KEY=dev-secret-key-change-this-in-production
DJANGO_ENV=development
DOMAIN=localhost
ALLOWED_HOSTS=localhost,127.0.0.1
FRONTEND_URL=http://localhost:3000

# -----------------------------------------------------------------------------
# DATABASE
# -----------------------------------------------------------------------------
# SQLite (default for development)
# DATABASE_URL=

# PostgreSQL (Docker)
POSTGRES_DB=bp_db
POSTGRES_USER=bp_user
POSTGRES_PASSWORD=bp_pass
DATABASE_URL=postgresql://bp_user:bp_pass@postgres:5432/bp_db

# -----------------------------------------------------------------------------
# REDIS, CACHE & CELERY
# -----------------------------------------------------------------------------
REDIS_URL=redis://redis:6379/0
FALLBACK_CACHE_BACKEND=dummy
CELERY_ENABLED=False

# -----------------------------------------------------------------------------
# STATIC & MEDIA FILES
# -----------------------------------------------------------------------------
# Options: django, whitenoise, s3, caddy, nginx
STATIC_FILES_HANDLER=django

# S3 Configuration (when STATIC_FILES_HANDLER=s3)
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=
# AWS_STORAGE_BUCKET_NAME=
# AWS_S3_REGION_NAME=eu-central-1
# AWS_S3_CUSTOM_DOMAIN=cdn.yourdomain.com

# -----------------------------------------------------------------------------
# EMAIL & NOTIFICATION PROVIDERS
# -----------------------------------------------------------------------------
# Email Provider: smtp, sendgrid, mock
EMAIL_PROVIDER=mock

# SMS Provider: netgsm, twilio, mock
SMS_PROVIDER=mock

# SMTP (when EMAIL_PROVIDER=smtp)
EMAIL_HOST=
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=
EMAIL_HOST_PASSWORD=
DEFAULT_FROM_EMAIL=noreply@localhost

# SendGrid (when EMAIL_PROVIDER=sendgrid)
SENDGRID_API_KEY=

# NetGSM (when SMS_PROVIDER=netgsm)
NETGSM_USERNAME=
NETGSM_PASSWORD=
NETGSM_HEADER=

# Twilio (when SMS_PROVIDER=twilio)
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_FROM_NUMBER=

# Push Notifications (FCM)
FCM_SERVER_KEY=

# -----------------------------------------------------------------------------
# OAUTH PROVIDERS
# -----------------------------------------------------------------------------
GOOGLE_OAUTH2_CLIENT_ID=
GOOGLE_OAUTH2_CLIENT_SECRET=

FACEBOOK_APP_ID=
FACEBOOK_APP_SECRET=

APPLE_CLIENT_ID=
APPLE_SECRET=
APPLE_KEY_ID=
APPLE_TEAM_ID=

# -----------------------------------------------------------------------------
# PAYMENT GATEWAY
# -----------------------------------------------------------------------------
IYZICO_API_KEY=sandbox-api-key
IYZICO_SECRET_KEY=sandbox-secret-key
IYZICO_TEST_MODE=True

# -----------------------------------------------------------------------------
# MULTI-TENANT
# -----------------------------------------------------------------------------
SUPERUSER_BYPASS_TENANT=True

# -----------------------------------------------------------------------------
# MONITORING
# -----------------------------------------------------------------------------
SENTRY_DSN=
APP_VERSION=1.0.0

# -----------------------------------------------------------------------------
# DOCKER SERVICES (Development only)
# -----------------------------------------------------------------------------
# pgAdmin
PGADMIN_DEFAULT_EMAIL=admin@localhost
PGADMIN_DEFAULT_PASSWORD=admin123

# -----------------------------------------------------------------------------
# BACKUP (Optional)
# -----------------------------------------------------------------------------
POSTGRES_CONTAINER=bp_postgres
BACKUP_DIR=/opt/backups/postgres
BACKUP_RETENTION_DAYS=7
MEDIA_BACKUP_DIR=/opt/backups/media
MEDIA_DIR=./backend/media
BACKUP_NOTIFY_EMAIL=

# Offsite Backup (S3)
OFFSITE_BACKUP_ENABLED=False
AWS_S3_BACKUP_BUCKET=
